  "features": {
    "authentication": "User registration and login with LocalStorage",
    "study_planning": "Smart algorithm for distributing study hours",
    "scheduling": "Automatic timetable generation with spaced repetition",
    "progress_tracking": "Real-time statistics and progress visualization",
    "responsive_design": "Mobile, tablet, and desktop support",
