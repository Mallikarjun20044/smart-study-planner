    "data_privacy": "100% local storage - no server communication"
  },
  "pages": {
    "index.html": "Landing page with features showcase",
    "public/register.html": "User registration",
    "public/login.html": "User authentication",
    "public/dashboard.html": "Main dashboard with statistics",
    "public/create-plan.html": "Study plan creation form",
    "public/calendar.html": "Weekly calendar view",
    "public/progress.html": "Progress tracking and analytics"
  },
  "algorithms": {
    "smart_scheduling": {
      "description": "Distributes study hours based on subject difficulty",
      "weights": {
        "easy": 1.0,
        "medium": 1.5,
        "hard": 2.5
      },
      "features": [
        "Difficulty-weighted allocation",
        "Spaced repetition scheduling",
        "Daily schedule generation",
        "Break management",
        "Load balancing"
